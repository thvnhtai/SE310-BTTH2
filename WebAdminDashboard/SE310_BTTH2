CREATE TABLE Products (
    Id INT PRIMARY KEY IDENTITY(1,1),  
    Name NVARCHAR(100) NOT NULL,
    Description NVARCHAR(255) NULL,
    Price DECIMAL(18, 2) NULL,  
    ImageUrl NVARCHAR(255) NULL,
    Rating FLOAT NULL  
);

